@model IEnumerable<Carreno_BugTracker.ViewModel.CustomUserData>

@{
    ViewBag.Title = "ManageRoles";
}


<div class="container">
    <div class="row">
        <div class="col text-center">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken();
                <div class="row">
                    @*Left column that holds the user*@
                    <div class="col">
                        @Html.ListBox("UserIds")

                    </div>
                    @*right column holding my roles*@
                    <div class="col">
                        @Html.DropDownList("RoleName", "- Select Role -")

                    </div>

                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary" style="width:100%;">Manage Roles</button>
                    </div>
                </div>

            }
        </div>
    </div>


    <hr />

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Full Name")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RoleName)
                        </th>




                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => user.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => user.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => user.RoleName)
                            </td>

                        </tr>

                    }



                </tbody>
            </table>
        </div>
    </div>
</div>