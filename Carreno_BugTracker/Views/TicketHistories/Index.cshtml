@using Carreno_BugTracker.Helpers
@using Carreno_BugTracker.Models
@model IEnumerable<TicketHistory>

@{

    var db = new ApplicationDbContext();
    ViewBag.Title = "Ticket History";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">

            <p>

                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("Changed By")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OldValue)
                        </th>
                        <th>

                            @Html.DisplayNameFor(model => model.NewValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChangedOn)
                        </th>
                        <th></th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.User.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Property)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OldValue)
                            </td>
                            <td>
                                @HistoriesDisplayHelper.DisplayData(item)                           
                            <td>
                                @Html.DisplayFor(modelItem => item.ChangedOn)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
