
@{
    ViewBag.Title = "AssignUsers";
}

<h2>AssignUsers</h2>


<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("ProjectId", (int)ViewBag.ProjectId)
                if (User.IsInRole("Admin"))
                {
                    @Html.DropDownList("ProjectManagerId", "- Select PM -")

                }
                else
                {
                    <div class="row">
                        <div class="col">
                            @Html.ListBox("SubmitterIds")
                        </div>
                        <div class="col">
                            @Html.ListBox("DeveloperIds")
                        </div>
                    </div>
                }

            }
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button type="submit" style="width: 100%" class="btn btn-dark">Assign</button>
        </div>
    </div>
</div>